<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:text="Profile Photo"
            android:textSize="30sp" />

        <ImageButton
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:background="@color/transparent"
            android:padding="20dp"
            android:scaleX="1.5"
            android:scaleY="1.5"
            android:src="@drawable/close_outline" />

        <ImageButton
            android:id="@+id/galleryBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pf"
            android:layout_alignParentLeft="true"
            android:layout_margin="20dp"
            android:background="@drawable/transparent_bg_bordered_button"
            android:padding="20dp"
            android:src="@drawable/gallery_outline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/galleryBtn"
            android:layout_alignLeft="@id/galleryBtn"
            android:text="Gallery"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/cameraBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pf"
            android:layout_alignParentRight="true"
            android:layout_margin="20dp"
            android:background="@drawable/transparent_bg_bordered_button"
            android:padding="20dp"
            android:src="@drawable/camera_outline" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cameraBtn"
            android:layout_alignRight="@id/cameraBtn"
            android:text="Camera"
            android:textSize="20sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>